<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkyellow"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.appintropage.nameinput.InputNameFragment">

    <ImageView
        android:id="@+id/iv_landing_page_3"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_180sdp"
        android:src="@drawable/ic_joker"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_landing_page_3_title"
        android:text="Input Your Name :"
        android:layout_marginTop="@dimen/_30sdp"
        style="@style/Text.30"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintTop_toBottomOf="@id/iv_landing_page_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_player_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_32sdp"
        android:background="@drawable/bg_rounded_white_rad_16"
        android:maxLines="1"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_landing_page_3_title"
        tools:text="REFRI" />

</androidx.constraintlayout.widget.ConstraintLayout>