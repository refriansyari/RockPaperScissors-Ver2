<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cream"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_landing_page_2"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_180sdp"
        android:src="@drawable/ic_superman"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_landing_page_2_title"
        android:text="@string/text_your_opponents"
        android:layout_marginBottom="@dimen/_30sdp"
        style="@style/Text.Status.35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/iv_landing_page_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_landing_page_2_computer"
        android:text="@string/text_player_opponent"
        android:layout_marginTop="@dimen/_50sdp"
        style="@style/Text.Title.40"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintTop_toBottomOf="@id/iv_landing_page_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>