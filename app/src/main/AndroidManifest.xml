<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.refri.rockpaperscissorsthegame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RockPaperScissorsTheGame">
        <activity
            android:name=".menu.MenuGameActivity"
            android:exported="false" />
        <activity
            android:name=".splashscreen.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.appintropage.IntroAppActivity"
            android:exported="true"
            android:label="My Custom AppIntro">
        </activity>
        <activity
            android:name=".game.GameActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>